{
  "emulators": {
    "firestore": {
      "port": 5002
    },
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5000
    }
  },
  "hosting": [
    {
      "target": "original",
      "public": "dist",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "new",
      "public": "dist",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}
